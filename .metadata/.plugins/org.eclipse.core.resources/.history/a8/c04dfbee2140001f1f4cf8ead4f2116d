package com.oop.basic.practice04;

import java.util.Arrays;

public class StudentExample {
	public static void main(String[] args) {
		
		Student s1 = new Student("홍길동", 25, 171, 81);
		Student s2 = new Student("한사람", 23, 183, 72);
		Student s3 = new Student("임꺽정", 26, 175, 65);
		
		Student[] sArr = {s1, s2, s3};
		
		int sumAge = 0;
		double sumHeight = 0;
		double sumWeight = 0;
		
		// 배열의 객체 정보 출력
		
		// 배열의 객체 정보 for문으로 출력
		for (int i=0; i<sArr.length; i++) {
			Student info = sArr[i];
			System.out.println("학생 이름 : " + info.name + "\t\t나이 : " + info.age + "\t\t신장 : " + info.height + "\t몸무게 : " + info.weigth);
			
			sumAge = info.age;
			sumHeight = info.height;
			sumWeight = info.weigth;
		}
		
		System.out.println("나이평균 : " + sumAge);
		System.out.println("신장평균 : " + Math.round(sumHeight)*100/100);
		System.out.println("몸무게평균 : " + Math.round(sumWeight)*100/100);
	
		
		
		
		
		
		
	}
}
