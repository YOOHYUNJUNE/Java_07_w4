package com.oop.basic.test;

public class Student {
	// 과목 평균, 학점
	String name;
	int korean, english, math, science;
	
	Student() {}
	
	Student(String name, int korean, int english, int math, int science) {
		this.name = name;
		this.korean = korean;
		this.english = english;
		this.math = math;
		this.science = science;
	}
	
	double getAvg() {
		int sum = korean + english + math + science;
		return (double) sum/4;
	}
	
	String getGrade() {
		double avg = getAvg();
		if (avg >= 90) {
			 return "A 학점";
		} else if (avg >= 80) {
			return "B 학점";
		} else {
			return "C 학점";
		}
	}
	
	
	
	
	
}
