package com.coding_test;

import java.util.Scanner;

public class Avg {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		// 과목 수 N
		// 과목 점수 a, b, c, d ....
		
		System.out.println("과목 수는 ?");
		int n = sc.nextInt();
		
		// 점수 조작
		// a, b, c, d 중 가장 높은 점수 찾기
		// 최고점 a일때, 평균: ( a + b/a*100 + c/a*100 + d/a*100 ..... ) / n
		
		// 최고점 찾기
		int maxNum = 0;
		
		for (int i=0; i<n; i++) {
			System.out.println("각 과목 점수 입력");
			int score = sc.nextInt();

			if (score > maxNum) {
				maxNum = score;
			}
		}
		
		
	}
}
